<!-- Archivo: ristorante_views.xml -->

<odoo>
  <data>

      <record model="ir.ui.view" id="view_ristorante_product_list">
          <field name="name">Ristorante Product List</field>
          <field name="model">ristorante.product</field>
          <field name="arch" type="xml">
              <tree>
                  <field name="name"/>
                  <field name="description"/>
              </tree>
          </field>
      </record>

      <record model="ir.actions.act_window" id="action_ristorante_product_window">
          <field name="name">Products</field>
          <field name="res_model">ristorante.product</field>
          <field name="view_mode">tree,form</field>
      </record>

      <menuitem name="Ristorante" id="menu_ristorante_root" />

      <menuitem name="Management" id="menu_ristorante_management" parent="menu_ristorante_root" />

      <menuitem name="Product List" id="menu_ristorante_product_list" parent="menu_ristorante_management"
          action="action_ristorante_product_window" />

  </data>
</odoo>
